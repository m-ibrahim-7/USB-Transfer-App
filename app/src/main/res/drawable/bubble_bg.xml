<?xml version="1.0" encoding="utf-8"?>
<!--
    res/drawable/bubble_bg.xml
    A semi-transparent teal circle.  Semi-transparent so it doesn't fully
    obscure text underneath when the doctor forgets to move it.
-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">
    <solid android:color="#CC00897B" />  <!-- 80% opacity teal-700 -->
    <stroke android:width="1.5dp" android:color="#80FFFFFF" />
</shape>
